<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBlack">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/logo" />

                <ImageView
                    android:id="@+id/name"
                    android:layout_width="200dp"
                    android:layout_height="@dimen/dimens_30dp"
                    android:layout_margin="@dimen/dimens_10dp"
                    android:layout_toRightOf="@+id/logo"
                    android:src="@drawable/logo_name" />
            </RelativeLayout>
        </Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimens_10dp"
                android:layout_marginRight="@dimen/dimens_10dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_eventname"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/dimens_10dp"
                    android:layout_marginBottom="@dimen/dimens_10dp"
                    android:text="@string/text_donate"
                    android:textColor="@color/color_calender_bg"
                    android:textSize="@dimen/text_20"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:layout_marginLeft="@dimen/dimens_10dp"
                    android:layout_marginRight="@dimen/dimens_10dp"
                    android:background="@color/color_product_name"></View>


                <!--
                GridView with 3 value for numColumns attribute
                -->
                <GridView
                    android:id="@+id/simpleGridView"
                    android:layout_width="fill_parent"
                    android:layout_height="200dp"
                    android:layout_marginLeft="@dimen/dimens_10dp"
                    android:footerDividersEnabled="false"
                    android:numColumns="3"
                    android:padding="1dp"
                    android:visibility="gone" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_10doller"
                        android:layout_width="@dimen/dimens_80dp"
                        android:layout_height="@dimen/dimens_50dp"
                        android:layout_margin="@dimen/dimens_10dp"
                        android:background="@drawable/small_box_line"
                        android:text="$10"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_18dp" />

                    <Button
                        android:id="@+id/btn_25doller"
                        android:layout_width="@dimen/dimens_80dp"
                        android:layout_height="@dimen/dimens_50dp"
                        android:layout_margin="@dimen/dimens_10dp"
                        android:background="@drawable/small_box_line"
                        android:text="$25"
                        android:textColor="@color/black"


                        android:textSize="@dimen/text_size_18dp" />

                    <Button
                        android:id="@+id/btn_50doller"
                        android:layout_width="@dimen/dimens_80dp"
                        android:layout_height="@dimen/dimens_50dp"
                        android:layout_margin="@dimen/dimens_10dp"
                        android:background="@drawable/small_box_line"
                        android:text="$50"

                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_18dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_100doller"
                        android:layout_width="@dimen/dimens_80dp"
                        android:layout_height="@dimen/dimens_50dp"
                        android:layout_margin="@dimen/dimens_10dp"
                        android:background="@drawable/small_box_line"
                        android:text="$100"
                        android:textColor="@color/black"

                        android:textSize="@dimen/text_size_18dp" />

                    <Button
                        android:id="@+id/btn_250doller"
                        android:layout_width="@dimen/dimens_80dp"
                        android:layout_height="@dimen/dimens_50dp"
                        android:layout_margin="@dimen/dimens_10dp"
                        android:background="@drawable/small_box_line"
                        android:text="$250"
                        android:textColor="@color/black"

                        android:textSize="@dimen/text_size_18dp" />

                    <Button
                        android:id="@+id/btn_500doller"
                        android:layout_width="@dimen/dimens_80dp"
                        android:layout_height="@dimen/dimens_50dp"
                        android:layout_margin="@dimen/dimens_10dp"
                        android:background="@drawable/small_box_line"
                        android:text="$500"

                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_18dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_1000doller"
                        android:layout_width="@dimen/dimens_80dp"
                        android:layout_height="@dimen/dimens_50dp"
                        android:layout_margin="@dimen/dimens_10dp"
                        android:background="@drawable/small_box_line"
                        android:text="$1000"
                        android:textColor="@color/black"

                        android:textSize="@dimen/text_size_18dp" />

                    <Button
                        android:id="@+id/btn_other"
                        android:layout_width="@dimen/dimens_80dp"
                        android:layout_height="@dimen/dimens_50dp"
                        android:layout_margin="@dimen/dimens_10dp"
                        android:background="@drawable/small_box_line"
                        android:text="@string/txt_other"
                        android:textAllCaps="false"
                        android:textColor="@color/black"


                        android:textSize="@dimen/text_size_18dp" />

                    <Button
                        android:id="@+id/btn_clear"
                        android:layout_width="@dimen/dimens_80dp"
                        android:layout_height="@dimen/dimens_50dp"
                        android:layout_margin="@dimen/dimens_10dp"
                        android:background="@drawable/small_box_line"
                        android:text="@string/txt_clear"
                        android:textAllCaps="false"
                        android:textColor="@color/black"

                        android:textSize="@dimen/text_size_18dp" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_cost"
                    android:layout_width="@dimen/dimens_80dp"
                    android:layout_height="@dimen/dimens_50dp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/dimens_10dp"
                    android:background="@drawable/small_box_blue"
                    android:gravity="center"
                    android:text="$40"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_18dp" />

                <TextView
                    android:id="@+id/tv_donatione"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/dimens_10dp"

                    android:layout_marginBottom="@dimen/dimens_10dp"
                    android:layout_marginTop="@dimen/dimens_20dp"
                    android:text="@string/text_donationthid"
                    android:textColor="@color/color_calender_bg"
                    android:textSize="@dimen/text_20"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:layout_marginLeft="@dimen/dimens_10dp"
                    android:layout_marginRight="@dimen/dimens_10dp"
                    android:background="@color/color_product_name"></View>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_20"
                    android:layout_marginTop="@dimen/text_20"

                    android:orientation="vertical">
<RadioGroup
    android:layout_width="match_parent"
    android:layout_height="match_parent">
                    <RadioButton
                        android:id="@+id/check_youthtrip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onCheckboxClicked"
                        android:text="@string/txt_youth"
                        android:textSize="@dimen/text_size_18dp" />


                    <RadioButton
                        android:id="@+id/check_cyber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimens_10dp"
                        android:onClick="onCheckboxClicked"
                        android:text="@string/txt_cyber"
                        android:textSize="@dimen/text_size_18dp" />


                    <RadioButton
                        android:id="@+id/check_other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimens_10dp"
                        android:onClick="onCheckboxClicked"
                        android:text="@string/txt_other"
                        android:textSize="@dimen/text_size_18dp" />

</RadioGroup>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_payment"
                    android:layout_width="@dimen/dimens_180dp"
                    android:layout_height="@dimen/dimens_50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dimens_20dp"
                    android:background="@drawable/blue_box"
                    android:text="@string/txt_apyment"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</RelativeLayout>
