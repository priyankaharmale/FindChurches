<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="500dp"
        android:orientation="vertical">

        <Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBlack">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/logo" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="@dimen/dimens_30dp"
                android:layout_margin="@dimen/dimens_10dp"
                android:src="@drawable/logo_name" />
        </Toolbar>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_30dp"
            android:gravity="center"
            android:text="Change Password"
            android:textColor="@color/colorWhite1"
            android:textSize="@dimen/text_size_18dp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimens_20dp"
            android:layout_marginRight="@dimen/dimens_20dp"
            android:layout_marginTop="@dimen/text_20"
            android:backgroundTint="@color/colorWhite1"
            android:textColorHint="@color/colorWhite1"
            app:errorTextAppearance="@style/error_appearance"
            app:hintTextAppearance="@style/hint_appearancewhite">

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorWhite1"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/colorWhite1"
                android:theme="@style/EditTextThemeWhite" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_confirmpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimens_20dp"
            android:layout_marginRight="@dimen/dimens_20dp"
            android:layout_marginTop="@dimen/dimens_10dp"
            android:backgroundTint="@color/colorWhite1"
            android:textColorHint="@color/colorWhite1"
            app:errorTextAppearance="@style/error_appearance"
            app:hintTextAppearance="@style/hint_appearancewhite">

            <EditText
                android:id="@+id/et_confirmpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorWhite1"
                android:ems="10"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/colorWhite1"
                android:theme="@style/EditTextThemeWhite" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:background="@drawable/rounded_rectangle"
            android:gravity="center"
            android:text="@string/btn_submit"
            android:textColor="@color/colorWhite1" />
    </LinearLayout>
</ScrollView>