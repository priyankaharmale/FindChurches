<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/dimens_100dp"

            android:weightSum="1">


            <Button
                android:id="@+id/btn_edit"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimens_35dp"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/dimens_10dp"
                android:background="@drawable/roundedrectangle"
                android:text="Edit"
                android:textColor="@color/black" />

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageView
                    android:id="@+id/user_camerabutton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignBottom="@+id/iv_view_profile_detail"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="130dp"
                    android:background="@null"
                    android:elevation="5dp"
                    android:padding="10dp"

                    android:scaleType="centerCrop"
                    android:src="@android:drawable/ic_menu_camera" />


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_view_profile_detail"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profile" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:indeterminate="true"
                    android:indeterminateTint="@color/blue"
                    android:indeterminateTintMode="src_atop"
                    android:visibility="visible" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimens_10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimens_10dp"
                    android:layout_marginTop="@dimen/dimens_5dp"

                    android:drawableLeft="@drawable/username"
                    android:text="   Username" />

                <EditText
                    android:id="@+id/et_userName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimens_10dp"
                    android:enabled="false"
                    android:inputType="text"
                    android:paddingTop="@dimen/dimens_5dp"
                    android:textAlignment="textEnd"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimens_10dp"
                android:layout_marginRight="@dimen/dimens_10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimens_10dp"
                    android:layout_marginTop="@dimen/dimens_5dp"

                    android:drawableLeft="@drawable/email"
                    android:text="   Email" />

                <EditText
                    android:id="@+id/et_userEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimens_30dp"
                    android:enabled="false"
                    android:inputType="textEmailAddress"
                    android:paddingTop="@dimen/dimens_5dp"
                    android:textAlignment="textEnd"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimens_10dp"
                android:layout_marginRight="@dimen/dimens_10dp"
                android:layout_marginTop="@dimen/dimens_5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimens_10dp"
                    android:layout_marginTop="@dimen/dimens_5dp"

                    android:drawableLeft="@drawable/ic_number"
                    android:text="   Number" />

                <EditText
                    android:id="@+id/et_userNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimens_10dp"
                    android:enabled="false"
                    android:inputType="number"
                    android:paddingTop="@dimen/dimens_5dp"
                    android:textAlignment="textEnd"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_16sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_paymentHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimens_10dp"
                android:layout_marginRight="@dimen/dimens_10dp"
                android:layout_marginTop="@dimen/dimens_20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimens_10dp"

                    android:drawableLeft="@drawable/history"
                    android:text="   Payment History" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimens_10dp"
                android:layout_marginRight="@dimen/dimens_10dp"
                android:layout_marginTop="@dimen/dimens_20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimens_10dp"

                    android:drawableLeft="@drawable/password"
                    android:text="     Change Password" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimens_10dp"
                android:layout_marginRight="@dimen/dimens_10dp"
                android:layout_marginTop="@dimen/dimens_20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimens_10dp"

                    android:drawableLeft="@drawable/ic_power_settings_new_black_24dp"
                    android:text="   Logout" />

            </LinearLayout>



        </LinearLayout>

    </ScrollView>

